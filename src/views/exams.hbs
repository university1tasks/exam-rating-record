<html>
  <head>
    <title>Экзаменационная ведомость</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
  </head>
  <nav
    class="navbar navbar-expand navbar-light bg-light justify-content-center"
  >
    <a class="navbar-brand" href="/">Главная страница</a>
    <ul class="nav navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/students">Студенты</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/teachers">Преподаватели</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/subjects">Предметы</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/exams">Экзамены</a>
      </li>
    </ul>
  </nav>
  <body>
    <div class="container text-center my-4">
      <h1>Экзаменационная ведомость</h1>
      <div class="table-responsive">
        {{#each exams}}
          <table class="table table-bordered my-4 caption-top">
            <caption>Предмет:
              {{this.subject.name}}. Преподаватель:
              {{this.subject.teacher.lastName}}
              {{this.subject.teacher.firstName}}
              {{this.subject.teacher.patronymic}}</caption>
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Студент</th>
                <th scope="col">Оценка</th>
              </tr>
            </thead>
            <tbody>
              {{#each this.ratings}}
                <tr class="">
                  <td scope="row">{{@index}}</td>
                  <td>{{this.student.lastName}}
                    {{this.student.firstName}}
                    {{this.student.patronymic}}</td>
                  <td>{{this.rate}}</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        {{/each}}
        <a
          name=""
          id=""
          class="btn btn-primary"
          href="/exams/create"
          role="button"
        >Добавить экзамен</a>
      </div>
    </div>
  </body>
</html>