<html>
  <head>
    <title>Экзаменационная ведомость</title>
    <meta charset="utf-8" />
  </head>
  <body>
    <a href="/exams/create">Добавить экзамен</a>
    <h1>Экзаменационная ведомость</h1>
    {{#each exams}}
      <table>
        <p>Предмет:
          {{this.subject.name}}. Преподаватель:
          {{this.subject.teacher.lastName}}
          {{this.subject.teacher.firstName}}
          {{this.subject.teacher.patronymic}}</p>
        <tr><th>Студент</th><th>Оценка</th></tr>
        {{#each this.ratings}}
          <tr><td>{{this.student.lastName}}
              {{this.student.firstName}}
              {{this.student.patronymic}}</td><td>{{this.rate}}</td></tr>
        {{/each}}
      </table>
    {{/each}}
  </body>
</html>